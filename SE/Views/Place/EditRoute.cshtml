@model SE.Models.Route

@{
    ViewBag.Title = "Edit Route";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @if (ViewBag.notify != null)
        {
            <div class="form-group">
                <div class="col-xs-4">
                    <div class="alert bg-@(ViewBag.notify.status ? "success":"danger" )" role="alert">
                        <svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg>@ViewBag.notify.msg
                    </div>
                </div>
            </div>
        }
        @Html.HiddenFor(model => model.idRoute)

        <div class="form-group">
            <label class="control-label col-md-2" for="idFrom">From</label>
            <div class="col-md-3">
                @Html.DropDownList("idFrom", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="idTo">To</label>
            <div class="col-md-3">
                @Html.DropDownList("idTo", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
