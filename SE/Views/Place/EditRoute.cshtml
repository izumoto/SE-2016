@model SE.Models.Route

@{
    ViewBag.Title = "EditRoute";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idRoute)

        <div class="form-group">
            <label class="control-label col-md-2" for="idFrom">From</label>
            <div class="col-md-10">
                @Html.DropDownList("idFrom", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idFrom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="idTo">To</label>
            <div class="col-md-10">
                @Html.DropDownList("idTo", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
