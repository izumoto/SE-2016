
@{
    ViewBag.Title = "Schedule Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @if (ViewBag.notify != null)
        {
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
                    <div class="alert bg-@(ViewBag.notify.status ? "success":"danger" )" role="alert">
                        <svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg>@ViewBag.notify.msg
                    </div>
                </div>
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-body">
                <a href="@Url.Action("Create")" class="btn btn-primary" style="margin-bottom:10px">Add Schedule</a>
                <table data-toggle="table" data-url="@Url.Action("GetListSchedule")" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                    <thead>
                        <tr>
                            <th data-field="id" data-sortable="true">Schedule ID</th>
                            <th data-field="date" data-sortable="true">Date</th>
                            <th data-field="route" data-sortable="true">Route</th>
                            <th data-field="vehicle" data-sortable="true">Vehicle</th>
                            <th data-field="price" data-sortable="true">Price</th>
                            <th data-field="action">Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div><!--/.row-->

