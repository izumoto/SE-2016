@model SE.Models.Vehicle

@{
    ViewBag.Title = "New Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @if (ViewBag.notify != null)
        {
            <div class="form-group">
                <div class="col-xs-4">
                    <div class="alert bg-@(ViewBag.notify.status ? "success":"danger" )" role="alert">
                        <svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg>@ViewBag.notify.msg
                    </div>
                </div>
            </div>
        }
        <div class="form-group">
            <label class="control-label col-md-2" for="license">License</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.license, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="dayimport">Day Import</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dayImport, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
