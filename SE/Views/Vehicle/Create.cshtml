@model SE.Models.Vehicle

@{
    ViewBag.Title = "New Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="license">License</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.license, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.license, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="dayimport">Day Import</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dayImport, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.dayImport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
